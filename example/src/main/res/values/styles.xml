<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Gigya SDK specific style-->

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenBackground">@color/sap_blue</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/sap_black</item>
        <item name="postSplashScreenTheme">@style/Theme.ExampleApplication</item>
    </style>

</resources>